---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import '../styles/global.css';
---

<Layout title="AeroFabric Solutions - Contact Us">
  <Header />
  
  <main class="container contact-page">
    <section class="contact-header">
      <h1>Get in Touch</h1>
      <p>Have a project or inquiry? Our team is ready to help you find the perfect air distribution solution.</p>
    </section>

    <section class="contact-form">
      <form>
        <div class="form-group">
          <label for="name">Full Name</label>
          <input type="text" id="name" name="name" required />
        </div>
        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" id="email" name="email" required />
        </div>
        <div class="form-group">
          <label for="company">Company</label>
          <input type="text" id="company" name="company" />
        </div>
        <div class="form-group">
          <label for="message">Your Message</label>
          <textarea id="message" name="message" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn">Send Inquiry</button>
      </form>
    </section>

    <section class="contact-info">
      <div class="contact-details">
        <h2>Contact Information</h2>
        <p>üìç 123 Innovation Drive, Tech Park</p>
        <p>üìû (555) 123-4567</p>
        <p>‚úâÔ∏è info@aerofabricsolutions.com</p>
      </div>
    </section>
  </main>
</Layout>

<style>
  .contact-page {
    padding: 50px 0;
  }

  .contact-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .contact-header h1 {
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 15px;
  }

  .contact-form {
    max-width: 600px;
    margin: 0 auto 50px;
    background: var(--white);
    padding: 40px;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group label {
    display: block;
    margin-bottom: 8px;
    color: var(--primary-color);
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
  }

  .contact-info {
    text-align: center;
  }

  .contact-details {
    background-color: var(--background-color);
    padding: 30px;
    border-radius: 10px;
  }

  .contact-details h2 {
    color: var(--secondary-color);
    margin-bottom: 20px;
  }
</style>
